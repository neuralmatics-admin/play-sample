# Routes
# This file defines all application routes (Higher priority routes first)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

GET     /                           global.common.BaseController.index()
GET     /users                      user.UserController.getAllUsers()
POST    /users                      user.UserController.createUser()
GET     /users/:userId              user.UserController.getUser(userId : String)
PUT     /users/:userId              user.UserController.updateUser(userId : String)
DELETE  /users/:userId              user.UserController.deleteUser(userId : String)
